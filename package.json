{
  "name": "starter-theme",
  "version": "0.0.1",
  "description": "Starter Skeleton Theme for Shopify",
  "main": "theme/templates/index.liquid",
  "scripts": {
    "styles:main": "sassimport _src/scss/styles.scss -o theme/assets/styles.scss.liquid",
    "styles:main:watch": "watch 'npm run styles:main' _src/scss/",
    "styles:styleguide": "sassimport _src/scss/styleguide.scss -o theme/assets/styleguide.scss.liquid",
    "styles:styleguide:watch": "watch 'npm run styles:styleguide' _src/scss/",
    "styles:watch": "parallelshell 'npm run styles:main:watch' 'npm run styles:styleguide:watch'",
    "scripts:core": "browserify --debug _src/js/core.js > theme/assets/core.js && browserify _src/js/core.js | uglifyjs -c -m > theme/assets/core.min.js",
    "scripts:core:watch": "watch 'npm run scripts:core' _src/js/",
    "scripts:watch": "parallelshell 'npm run scripts:core:watch'",
    "build": "parallelshell 'npm run styles:watch' 'npm run scripts:watch'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stewartknapman/shopify-starter.git"
  },
  "author": "@stewartknapman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stewartknapman/shopify-starter/issues"
  },
  "homepage": "https://github.com/stewartknapman/shopify-starter#readme",
  "dependencies": {
    "inside-scss": "^0.0.5"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "browserify": "^13.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "sass-importer": "0.0.2",
    "uglify-js": "^2.6.2",
    "watch": "^0.17.1"
  }
}
