@if $include_breakpoint_sizes {
  body:after {
    display: block;
    visibility: hidden;
    width: 0;
    height: 0;
    margin-top: ($line_height_base * -1em);
    padding: 0;
    
    @each $breakpoint in $breakpoint_sizes {
      @if (nth($breakpoint, 2)) {
        @media (min-width: nth($breakpoint, 2)) {
          content: '#{nth($breakpoint, 1)}';
        }
      } @else {
        content: '#{nth($breakpoint, 1)}';
      }
    }
  }
