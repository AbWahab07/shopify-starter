@mixin button-style ($color, $background_color: $background_color_button, $border_color: false, $color_hover: false, $background_color_hover: false, $border_color_hover: false) {
  @if ($border_color == false) {
    $border_color: darken($background_color, 10%);
  }
  @if ($color_hover == false) {
    $color_hover: $color;
  }
  @if ($background_color_hover == false) {
    $background_color_hover: darken($background_color, 12%);
  }
  @if ($border_color_hover == false) {
    $border_color_hover: $border_color;
  }
  
  color: $color;
  background-color: $background_color;
  border-color: $border_color;
  
  &:hover,
  &:active {
    color: $color_hover;
    background-color: $background_color_hover;
    border-color: $border_color_hover;
  }
}@mixin responsive-table {
  @media (min-width: $breakpoint_tables) {
    td, th {
      padding: ($gutter_horizontal / 2) ($gutter_vertical / 2);
    }
  }
  
  @media (max-width: $breakpoint_tables) {
    table {
      display: block;
    }
    
    thead {
      display: none;
    }
    
    tbody, tfoot, tr, td, th {
      display: block;
    }
  
    tr {
      padding: ($gutter_horizontal / 2) ($gutter_vertical / 2);
    }
    
    td:before {
      content: attr(title);
      display: inline-block;
      margin-right: 2%;
